{% extends 'base.html.twig' %}

{% block title %}Formations index{% endblock %}

{% block body %}
    <h1>Formations index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdFormation</th>
                <th>NomFormation</th>
                <th>NumeroOffre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formation in formations %}
            <tr>
                <td>{{ formation.idFormation }}</td>
                <td>{{ formation.nomFormation }}</td>
                <td>{{ formation.numeroOffre }}</td>
                <td>
                    <a href="{{ path('app_formations_show', {'idFormation': formation.idFormation}) }}">show</a>
                    <a href="{{ path('app_formations_edit', {'idFormation': formation.idFormation}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_formations_new') }}">Create new</a>
{% endblock %}
