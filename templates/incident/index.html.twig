{% include 'base.html.twig' %}
{% include 'shared/header.html.twig' %}
{% include 'shared/sidebar.html.twig' %}


{% block title %}Incident index{% endblock %}

{% block body %}
    <h1>Incident index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdIncident</th>
                <th>Date</th>
                <th>Commentaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for incident in incidents %}
            <tr>
                <td>{{ incident.idIncident }}</td>
                <td>{{ incident.date ? incident.date|date('Y-m-d') : '' }}</td>
                <td>{{ incident.commentaire }}</td>
                <td>
                    <a href="{{ path('app_incident_show', {'idIncident': incident.idIncident}) }}">show</a>
                    <a href="{{ path('app_incident_edit', {'idIncident': incident.idIncident}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_incident_new') }}">Create new</a>
{% endblock %}
