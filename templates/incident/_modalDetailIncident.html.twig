<div class="modal fade" id="exampleModal{{ loop.index }}" tabindex="-1"
    aria-labelledby="exampleModalLabel{{ loop.index }}"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"
                    id="exampleModalLabel{{ loop.index }}">Description de l'incident</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="Fermer"></button>
            </div>
            <div class="modal-body">
                <h6><b>{{ incident.idBail.idPersonne.nom}} {{ incident.idBail.idPersonne.prenom}}, le {{ incident.date ? incident.date|date('Y-m-d') : '' }}</b></h4>
                <p>{{ incident.commentaire }}</p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary"
                        data-bs-dismiss="modal">Fermer
                </button>
            </div>
        </div>
    </div>
</div>
