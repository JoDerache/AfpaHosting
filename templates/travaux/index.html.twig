{% extends 'base.html.twig' %}

{% block title %}Travaux index{% endblock %}

{% block body %}
    <h1>Travaux index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdTravaux</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>CommentaireTravaux</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for travaux in travauxes %}
            <tr>
                <td>{{ travaux.idTravaux }}</td>
                <td>{{ travaux.dateDebut ? travaux.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ travaux.dateFin ? travaux.dateFin|date('Y-m-d') : '' }}</td>
                <td>{{ travaux.commentaireTravaux }}</td>
                <td>
                    <a href="{{ path('app_travaux_show', {'idTravaux': travaux.idTravaux}) }}">show</a>
                    <a href="{{ path('app_travaux_edit', {'idTravaux': travaux.idTravaux}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_travaux_new') }}">Create new</a>
{% endblock %}
