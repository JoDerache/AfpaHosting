{% extends 'base.html.twig' %}

{% block title %}Personne{% endblock %}

{% block body %}
    <h1>Personne</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdPersonne</th>
                <td>{{ personne.idPersonne }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ personne.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ personne.prenom }}</td>
            </tr>
            <tr>
                <th>AdressePostale</th>
                <td>{{ personne.adressePostale }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ personne.telephone }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ personne.mail }}</td>
            </tr>
            <tr>
                <th>DateNaissance</th>
                <td>{{ personne.dateNaissance ? personne.dateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Badge</th>
                <td>{{ personne.badge }}</td>
            </tr>
            <tr>
                <th>NumeroBeneficiaire</th>
                <td>{{ personne.numeroBeneficiaire }}</td>
            </tr>
            <tr>
                <th>IsBlacklisted</th>
                <td>{{ personne.isBlacklisted ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>LieuNaissance</th>
                <td>{{ personne.lieuNaissance }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_personne_index') }}">back to list</a>

    <a href="{{ path('app_personne_edit', {'idPersonne': personne.idPersonne}) }}">edit</a>

    {{ include('personne/_delete_form.html.twig') }}
{% endblock %}
