{% extends 'base.html.twig' %}

{% block title %}Mon espaces{% endblock %}

{% block body %}
    <div class="pagetitle">
      <h1>Mon espace</h1>
      
    </div><!-- End Page Title -->

    <section class="section profile">
      <div class="row">
        <div class="col-xl">
          <div class="card">
            <div class="card-body pt-3">
              <!-- Bordered Tabs -->
                <ul class="nav nav-tabs nav-tabs-bordered">
                    <li class="nav-item">
                    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Profile</button>
                    </li>
                    <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">Modifier Profile</button>
                    </li>
                    <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-change-password">Modifier mot de passe</button>
                    </li>
                </ul>

            <div class="tab-content pt-2">
                <div class="tab-pane fade show active profile-overview" id="profile-overview">
                            
                    <h5 class="card-title">Détail du Profile</h5>
                    <div class="card-body profile-card pt-4 d-flex flex-column">
                    {# <img src="assets/img/profile-img.jpg" alt="Profile"> #}
                    </div>
                    
                    <div class="row">
                    <div class="col-lg-3 col-md-4 label ">Nom et Prénom</div>
                    <div class="col-lg-9 col-md-8">{{ personne.prenom }} {{ personne.nom }}</div>
                    </div>

                    <div class="row">
                    <div class="col-lg-3 col-md-4 label">Date de Naissance</div>
                    <div class="col-lg-9 col-md-8">{{ personne.dateNaissance ? personne.dateNaissance|date('d/m/Y') : '' }}</div>
                    </div>

                    <div class="row">
                    <div class="col-lg-3 col-md-4 label">Formation</div>
                    <div class="col-lg-9 col-md-8">{{participation.0.idFormation.nomFormation}}</div>
                    </div>

                    <div class="row">
                    <div class="col-lg-3 col-md-4 label">Date d'entrée en formation</div>
                    <div class="col-lg-9 col-md-8">{{participation.0.dateEntree ? participation.0.dateEntree|date('d/m/Y') : '' }}</div>
                    </div>

                    <div class="row">
                    <div class="col-lg-3 col-md-4 label">Date de fin de formation</div>
                    <div class="col-lg-9 col-md-8">{{participation.0.dateSortie ? participation.0.dateSortie|date('d/m/Y') : '' }}</div>
                    </div>

                    <div class="row">
                    <div class="col-lg-3 col-md-4 label">Téléphone</div>
                    <div class="col-lg-9 col-md-8">{{ personne.telephone }}</div>
                    </div>

                    <div class="row">
                    <div class="col-lg-3 col-md-4 label">Email</div>
                    <div class="col-lg-9 col-md-8">{{ personne.mail }}</div>
                    </div>

                    <div class="row">
                    <div class="col-lg-3 col-md-4 label">Lieu de résidence</div>
                    <div class="col-lg-9 col-md-8">{{ personne.adressePostale }}</div>
                    </div>

                </div>
                <div class="tab-pane fade profile-edit pt-3" id="profile-edit">

                  <!-- Profile Edit Form -->
                  <form>
                    <div class="row mb-3">
                      <label for="Address" class="col-md-4 col-lg-3 col-form-label">Lieu de résidence</label>
                      <div class="col-md-8 col-lg-9">
                        <input name="address" type="text" class="form-control" id="Address" value={{)}}>
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="Phone" class="col-md-4 col-lg-3 col-form-label">Téléphone</label>
                      <div class="col-md-8 col-lg-9">
                        <input name="phone" type="text" class="form-control" id="Phone" value="06 48 63 53 82">
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="Email" class="col-md-4 col-lg-3 col-form-label">Email</label>
                      <div class="col-md-8 col-lg-9">
                        <input name="email" type="email" class="form-control" id="Email" value="k.anderson@example.com">
                      </div>
                    </div>

                    <div class="text-center">
                      <button type="submit" class="btn btn-danger card-btn">Sauvegarder</button>
                    </div>
                  </form><!-- End Profile Edit Form -->

                </div>
            </div>
            </div>

            </div>
            </div>
      </div>
    </section>


    <a href="{{ path('app_personne_index') }}">back to list</a>

    <a href="{{ path('app_personne_edit', {'idPersonne': personne.idPersonne}) }}">edit</a>

    {{ include('personne/_delete_form.html.twig') }}
{% endblock %}
