{% extends 'base.html.twig' %}

    {% block body %}
    <div class="container">
        <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
            <div class="row">
                <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center" id="div_login">
                    <div class="d-flex justify-content-center py-4">
                        <a href="index.html" class="logo d-flex align-items-center w-auto">
                            <img src="{{ asset('img/Logo_Afpa.png') }}" />
                        </a>
                    </div>
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="pt-4 pb-2">
                                <h5 class="card-title text-center pb-0 fs-4">Connexion</h5>
                            </div>
                                <form action="{{ path('login') }}" method="POST"  class="row g-3 needs-validation">
                                    <div class="col-12">
                                        <label for="yourUsername" class="form-label">Numéro de bénéficiaire</label>
                                        <div class="input-group has-validation">
                                            <input type="text" name="_username" class="form-control" id="yourUsername" required>
                                            <div class="invalid-feedback">Entrez votre numéro de bénéficiaire</div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <label for="yourPassword" class="form-label">Mot de passe</label>
                                        <input type="password" name="_password" class="form-control" id="yourPassword" required>
                                        <div class="invalid-feedback">Entrez votre mot de passe !</div>
                                    </div>
                                    <input type="hidden" name="_target_path" value="{{ path('main') }}"/>
                                    <input type="hidden" name="_csrf_token" value="{{csrf_token('authenticate')}}" />
                                    <button class="w-100 btn btn-lg btn-primary" type="submit">Connexion</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        {% endblock %}

